Ext.application(
{
    name: 'Hospital',
    controllers: ['Routing'],
    models: [
    <% column_hash.each do |key, value| %>
        '<%= key.capitalize %>',
    <% end %>],
    views: ['basegrid.View', 'main.Main', 
    <% column_hash.each do |key, value| %>
        '<%= key %>.View',
    <% end %>],

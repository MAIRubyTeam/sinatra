<head>
    <title>Hospital</title>
    <link rel = "stylesheet"
    href = "../Hospital/ext/packages/ext-theme-aria/build/resources/ext-theme-aria-all.css">
    <script src = "../Hospital/ext/build/ext.js"></script>

<script>

Ext.syncRequire(['Ext.app.Application']);

<%= erb :hospital_models, :locals => {:column_hash => column_hash} %>
